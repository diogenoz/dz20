<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:FormPanel>
            <g:VerticalPanel spacing="10">
                <g:HorizontalPanel>
                    <g:Label text="ID:" width="100px"/>
                    <g:TextBox enabled="false" ui:field="idText" width="200px"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Title:" width="100px"/>
                    <g:TextBox name="title" ui:field="titleText" width="200px"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Owner:" width="100px"/>
                    <g:ListBox ui:field="ownerBox" name="owner" width="209px">
                    </g:ListBox>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Assignee:" width="100px"/>
                    <g:ListBox ui:field="assigneeBox" name="assignee" width="209px">
                    </g:ListBox>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Description:" width="100px"/>
                    <g:TextBox name="description" ui:field="descriptionText" width="200px"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Status:" width="100px"/>
                    <g:ListBox ui:field="statusBox" name="status" width="209px">
                    </g:ListBox>
                </g:HorizontalPanel>

                <g:Button ui:field="btnSubmit">Создать</g:Button>
            </g:VerticalPanel>
        </g:FormPanel>
    </g:DecoratorPanel>
</ui:UiBinder>